@model IEnumerable<BonusPaymentSystem.Core.Model.ApplicationUser>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@ViewData["Title"]</h4>
        <p class="card-description">
            <a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a>
        </p>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Codigo Empleado
                        </th>
                        <th>
                            Usuario
                        </th>
                        <th>
                            Teléfono
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Apellido
                        </th>
                        <th>
                            Cuenta Bancaria
                        </th>
                        <th>
                            Estatus
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BankAccount)
                            </td>
                            <td>
                                @if (item.Status == 1)
                                {
                                    <label class="badge badge-success">Activo</label>
                                }
                                else
                                {
                                    <label class="badge badge-warning">Inactivo</label>
                                }
                            </td>
                            <td>                
                                @Html.ActionLink("Editar", "Edit", new { id = item.UserName }) |
                                @Html.ActionLink("Ver", "Details", new { id = item.UserName })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>