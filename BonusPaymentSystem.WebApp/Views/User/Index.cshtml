@model IEnumerable<BonusPaymentSystem.Core.Model.ApplicationUser>

@{
    ViewData["Title"] = "Usuarios";
}

<p>
    <a asp-action="Create">Crear Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Codigo Empleado
            </th>
            <th>
                Usuario
            </th>
            <th>
               Teléfono
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
               Cuenta Bancaria
            </th>
            <th>
                Estatus
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankAccount)
            </td>
            <td>
                @if (item.Status == 1)
                {   <span>Activo </span>
                }
                else
                {
                   <span>Inactivo </span>
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.UserName  }) |
                @Html.ActionLink("Ver", "Details", new { id = item.UserName }) 
            </td>
        </tr>
}
    </tbody>
</table>
