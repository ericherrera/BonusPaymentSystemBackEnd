@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-6 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="../../images/bps-logo-login.jpg" alt="logo">
                </div>
                <h6 class="font-weight-light">Ingrese su credenciales para continuar.</h6>
                <form class="pt-3" id="account" method="post" novalidate="novalidate">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control form-control-lg" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password"  class="form-control form-control-lg" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <button id="login-submit" type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Entrar</button>
                    </div>
                    <div class="my-2 d-flex justify-content-between align-items-center">
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <a href="#" class="auth-link text-black">Olvido su clave?</a>
                    </div>
                    <div class="mb-2">

                    </div>
                    <div class="text-center mt-4 font-weight-light">
                        No tienes usuario? <a asp-area="Identity" asp-page="/Account/Register" class="text-primary">Registrar Me</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}